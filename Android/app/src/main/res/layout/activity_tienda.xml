<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_space_gradient"
    tools:context=".TiendaActivity">

    <LinearLayout
        android:id="@+id/hudBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#99000000"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← HUB"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"/>

        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_glass_panel"
            android:paddingHorizontal="16dp"
            android:paddingVertical="6dp"
            android:gravity="center">

            <TextView
                android:id="@+id/tvMonedasUsuario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 CR"
                android:textColor="@color/gold"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="monospace"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/hudBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTabMercado"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="MERCADO"
            android:background="@drawable/btn_neon_cyan"
            android:textColor="@color/neon_cyan"
            android:textStyle="bold"
            android:layout_marginEnd="6dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTabInventario"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:text="INVENTARIO"
            android:background="@drawable/btn_neon_cyan"
            android:textColor="@color/white"
            android:alpha="0.5"
            android:textStyle="bold"
            android:layout_marginStart="6dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewProductos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toTopOf="@+id/devConsole"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/devConsole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9000000"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[DEV_MODE] :: INYECCIÓN DE FONDOS"
            android:textColor="#00FF00"
            android:fontFamily="monospace"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etDevMonedas"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/input_void"
                android:hint="Cantidad"
                android:textColor="@color/white"
                android:textColorHint="#666666"
                android:inputType="number"
                android:paddingHorizontal="12dp"/>

            <Button
                android:id="@+id/btnDevAdd"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="EJECUTAR"
                android:backgroundTint="#222222"
                android:textColor="#00FF00"
                android:layout_marginStart="8dp"
                style="@style/Widget.AppCompat.Button.Small"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>